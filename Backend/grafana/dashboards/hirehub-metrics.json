{
  "dashboard": {
    "title": "HireHub Metrics Dashboard",
    "tags": ["hirehub", "metrics", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "P95 Latency (Last Hour)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "yesoreyeram-infinity-datasource",
              "uid": "HireHub Metrics API"
            },
            "type": "json",
            "source": "url",
            "url": "/api/metrics/performance?time_window_minutes=60",
            "format": "table",
            "root_selector": "all_operations",
            "columns": [
              {
                "selector": "p95_ms",
                "text": "P95 Latency (ms)",
                "type": "number"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 2000, "color": "yellow"},
                {"value": 3000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Hourly Cost",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "yesoreyeram-infinity-datasource",
              "uid": "HireHub Metrics API"
            },
            "type": "json",
            "source": "url",
            "url": "/api/metrics/costs?time_window_minutes=60",
            "format": "table",
            "root_selector": "costs",
            "columns": [
              {
                "selector": "total_cost_usd",
                "text": "Cost (USD)",
                "type": "number"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 4
          }
        }
      },
      {
        "id": 3,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
