            "url": "/api/metrics/cache",
            "format": "table",
            "root_selector": "cache.prompt_cache",
            "columns": [
              {
                "selector": "hit_rate_percent",
                "text": "Hit Rate %",
                "type": "number"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
